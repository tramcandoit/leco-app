  <script>
      let selectedTopic = "";
  let selectedSourceType = "law"; // m·∫∑c ƒë·ªãnh

  function selectTopic(topic) {
    if (topic === "H√¥n nh√¢n") {
      selectedSourceType = "law";
    } else if (topic === "T√¨nh hu·ªëng") {
      selectedSourceType = "judgment";
    }

    selectedTopic = topic;
    document.getElementById("sub-title").textContent = `ƒêang t∆∞ v·∫•n ch·ªß ƒë·ªÅ: ${topic}`;
    switchView("pre-chat", "chat-box");

    addMessage("user", `T√¥i mu·ªën t∆∞ v·∫•n v·ªÅ: ${topic}`);
    addMessage("bot", `B·∫°n ƒë√£ ch·ªçn ch·ªß ƒë·ªÅ "${topic}". M·ªùi b·∫°n ƒë·∫∑t c√¢u h·ªèi.`);
  }

  function goBack() {
    document.getElementById("chat-history").innerHTML = "";
    document.getElementById("user-input").value = "";
    document.getElementById("sub-title").textContent = "Ch·ªçn ch·ªß ƒë·ªÅ ƒë·ªÉ b·∫Øt ƒë·∫ßu";
    switchView("chat-box", "pre-chat");
  }

  function addMessage(sender, content) {
    const chat = document.getElementById("chat-history");
    const msg = document.createElement("div");
    msg.classList.add("chat-message", sender);
    msg.innerHTML = `<div class="bubble">${content}</div>`;
    chat.appendChild(msg);
    chat.scrollTop = chat.scrollHeight;
  }

  function switchView(hideId, showId) {
    const hideEl = document.getElementById(hideId);
    const showEl = document.getElementById(showId);

    hideEl.classList.remove("visible");
    hideEl.classList.add("fade-out");
    setTimeout(() => {
      hideEl.classList.add("hidden");
      hideEl.classList.remove("fade-out");

      showEl.classList.remove("hidden");
      showEl.classList.add("fade-in");
      showEl.classList.add("visible");

      setTimeout(() => {
        showEl.classList.remove("fade-in");
      }, 400);
    }, 300);
  }

  document.getElementById("chat-form").addEventListener("submit", async function (e) {
    e.preventDefault();
    const input = document.getElementById("user-input");
    const question = input.value.trim();
    if (!question) return;

    addMessage("user", question);
    input.value = "";

    try {
      const res = await fetch("http://localhost:5000/judgment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          question: question,
          source_type: selectedSourceType
        })
      });

      if (res.ok) {
        const data = await res.json();
        addMessage("bot", data.answer || "‚úÖ ƒê√£ nh·∫≠n ph·∫£n h·ªìi, nh∆∞ng kh√¥ng c√≥ n·ªôi dung.");
